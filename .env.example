# Medical Report PDF Processor - Environment Variables Example
# Copy this file to .env and update with your values

# Application Settings
APP_NAME=Medical Report PDF Processor
APP_VERSION=1.0.0
LOG_LEVEL=INFO

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
MAX_WORKERS=4

# Tesseract OCR Path
# Windows: C:\Program Files\Tesseract-OCR\tesseract.exe
# Linux: /usr/bin/tesseract
# Docker: /usr/bin/tesseract
TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# File Upload Settings
MAX_UPLOAD_SIZE_MB=100
ALLOWED_EXTENSIONS=.pdf

# PDF Processing Settings
PDF_DPI=200
PDF_IMAGE_FORMAT=PNG
PDF_COLOR_SPACE=RGB

# Blank Page Detection
VARIANCE_THRESHOLD=100
EDGE_THRESHOLD=50
WHITE_PIXEL_RATIO=0.95
USE_EDGE_DETECTION=True

# Report Splitting
USE_OCR=True
OCR_LANGUAGE=eng
MIN_CONFIDENCE=60

# Duplicate Detection
HASH_ALGORITHM=phash
HASH_SIZE=8
SIMILARITY_THRESHOLD=0.95
HAMMING_DISTANCE_THRESHOLD=5

# File Management
OUTPUT_FORMAT=pdf
INCLUDE_METADATA=True
COMPRESS_OUTPUT=False
KEEP_TEMP_FILES=False

# Directory Paths
INPUT_DIR=input
OUTPUT_DIR=output
TEMP_DIR=temp

# Performance Settings
BATCH_SIZE=10
MEMORY_LIMIT_MB=1024

# CORS Settings (for production, restrict to specific domains)
CORS_ORIGINS=*

# Logging
LOG_FILE=processing.log
LOG_CONSOLE=True
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Background Tasks
JOB_CLEANUP_HOURS=24
JOB_CLEANUP_INTERVAL_HOURS=1
