# Medical Report PDF Processor - Development Dockerfile
# Includes hot-reload and development tools

FROM python:3.11-slim

LABEL maintainer="Medical Report PDF Processor"
LABEL description="Development environment with hot-reload"

# Install system dependencies including Tesseract OCR
RUN apt-get update && apt-get install -y --no-install-recommends \
    tesseract-ocr \
    tesseract-ocr-eng \
    libtesseract-dev \
    libleptonica-dev \
    libpng-dev \
    libjpeg-dev \
    build-essential \
    gcc \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy and install Python dependencies
COPY requirements.txt /app/
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir black flake8 mypy ipython

# Configure Tesseract path
ENV TESSERACT_CMD=/usr/bin/tesseract

# Create necessary directories
RUN mkdir -p input output temp

# Expose port
EXPOSE 8000

# Run with hot-reload enabled
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload", "--log-level", "debug"]
